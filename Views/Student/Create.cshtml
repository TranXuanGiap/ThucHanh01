@model ThucHanh01.Models.Student

@{
    ViewData["Title"] = "Thêm sinh viên";
}

<h2 class="mb-3 text-primary">Thêm sinh viên mới</h2>

<form asp-action="Add" asp-controller="Student" asp-area="Admin" method="post" enctype="multipart/form-data">

    
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Họ tên" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

 
    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Diem" class="form-label"></label>
        <input asp-for="Diem" class="form-control" placeholder="Điểm (0.0 - 10.0)" />
        <span asp-validation-for="Diem" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Branch" class="form-label"></label>
        <select asp-for="Branch" class="form-select" asp-items="ViewBag.AllBranches">
            <option value="">-- Chọn ngành --</option>
        </select>
        <span asp-validation-for="Branch" class="text-danger"></span>
    </div>

    
    <div class="form-group mb-3">
        <label asp-for="IsRegular" class="form-label"></label>
        <select asp-for="IsRegular" class="form-select">
            <option value="true">Chính quy</option>
            <option value="false">Phi chính quy</option>
        </select>
        <span asp-validation-for="IsRegular" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="DateOfBorth" class="form-label"></label>
        <input asp-for="DateOfBorth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBorth" class="text-danger"></span>
    </div>

  
    <div class="form-group mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select" asp-items="@(new SelectList(ViewBag.AllGenders))">
            <option value="">-- Chọn giới tính --</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" placeholder="Địa chỉ" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label class="form-label">Ảnh đại diện</label>
        <input type="file" name="AvatarFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-success">Thêm mới</button>
    <a asp-action="List" asp-controller="Student" asp-area="Admin" class="btn btn-secondary ms-2">Quay lại</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
